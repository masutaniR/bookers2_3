<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user_info', user: @user %>
      <%= render 'books/new_book', book: @new_book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user) do %>
                <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size: '40x40', class: 'rounded' %><br>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to @book.title, book_path(@book) %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <% if @book.user == current_user %>
              <td>
                <%= link_to "Edit", edit_book_path(@book), class: 'btn btn-success' %>
              </td>
              <td>
                <%= link_to "Destroy", book_path(@book), method: :delete, class: 'btn btn-danger', "data-confirm" => "本当に消しますか？" %>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    <div class="row">
      <div class="col-md-6">

        <div id="favorites_button">
          <%= render partial: 'favorites/favorite', locals: { book: @book} %>
        </div>

        <h4>Comments</h4>
        <p><%= pluralize(@book.comments.count, "comment") %></p>
        <% @book.comments.each do |comment| %>
        <div class="comment-box mb-1">
          <div class="comment-user">
            <%= link_to user_path(comment.user) do %>
              <%= attachment_image_tag comment.user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg", size: '30x30', class: 'rounded' %>
              <%= comment.user.name %>
            <% end %>
            <span class="comment-date small text-secondary mx-1">
              <%= comment.created_at.strftime('%Y/%m/%d') %>
            </span>
            <% if comment.user == current_user %>
              <span class="comment-delete small">
                <%= link_to "Destroy", book_comment_path(comment.book, comment), method: :delete, "data-confirm" => "Are you sure?" %>
              </span>
            <% end %>
          </div>
          <div class="comment-text">
            <%= comment.comment %>
          </div>
        </div>
        <% end %>
        <%= form_with(model:[@book, @comment], local: true) do |f| %>
        <div class="form-group mt-5">
          <%= f.text_area :comment, placeholder: 'New Comment', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.submit 'Post Comment', class: 'btn btn-sm btn-info' %>
        </div>
        <% end %>
      </div>
      </div>
    </div>
  </div>
</div>