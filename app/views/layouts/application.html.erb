<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2_3</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">Bookers</a>
        <ul class="navbar-nav ml-auto">
          <li>
            <%= link_to root_path do %>
              <i class="fas fa-home nav-link text-light">Home</i>
            <% end %>
          </li>
          <li>
            <%= link_to home_about_path do %>
              <i class="fas fa-link nav-link text-light">About</i>
            <% end %>
          </li>
        </ul>
        </div>
      </nav>
    </header>

    <main>
      <%= yield %>
    </main>

    <footer>
      <div class="container">
        <div class="row">
          <p class="mx-auto mt-5">CopyRight Infratop.inc</p>
        </div>
      </div>
    </footer>

  </body>
</html>
